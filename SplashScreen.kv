MDScreen:
    name: "SplashScreen"
    on_enter: self.ids.progress.start()

    FloatLayout:
        source: 'example.gif'
        allow_stretch: True
        anim_delay: 0
        #anim loop 1
        anim_reset: True
    
    Image:
        source: 'Imagenes/dron.gif'
    
    BoxLayout:
        pos_hint: {'center_y': .3, 'center_x': .5}
        padding: '10p'
        size_hint_x: .7
        MDLinearProgressIndicator:
            id: progress
            orientation: 'horizontal'
            type: 'indeterminate'
            size_hint_x: .5
            value: 50
            pos_hint: {'center_x': .5, 'center_y': .5}
            running_indeterminate_duration: 0.5
            catching_indeterminate_duration: 0.5